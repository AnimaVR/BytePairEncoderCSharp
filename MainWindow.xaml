<Window x:Class="BytePairEncoding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BytePairEncoding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="startButton" Content="Start Training" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Click="startTrainingButton_Click"/>
        <TextBlock x:Name="vocabSizeTextBlock" Margin="10,0,421,95" TextWrapping="Wrap" Text="" Height="35" VerticalAlignment="Bottom"/>
        <Button x:Name="decodeButton" Content="Decode" HorizontalAlignment="Left" Margin="10,0,0,48" Width="111" Click="decodeButton_Click" Height="30" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="decodedTextBlock" Margin="445,0,10,45" TextWrapping="Wrap" Text="" Height="33" VerticalAlignment="Bottom" Foreground="#FFFDFDFD" Background="#FF313131"/>
        <TextBox x:Name="inputTextBox" Margin="126,0,10,10" TextWrapping="Wrap" Text="" Height="30" VerticalAlignment="Bottom"/>
        <Button x:Name="encodeButton" Content="Encode" Margin="10,0,0,10" Click="encodeButton_Click" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="111"/>
        <TextBlock x:Name="encodedTextBlock" Margin="126,0,0,45" TextWrapping="Wrap" Text="" Height="33" VerticalAlignment="Bottom" Foreground="White" Background="Black" HorizontalAlignment="Left" Width="319"/>
        <TextBlock x:Name="valBinTextBlock" Margin="471,44,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="295" Background="Black" Foreground="White"/>
        <Button x:Name="LoadModelButton" Content="Load Model" HorizontalAlignment="Left" Margin="215,10,0,0" VerticalAlignment="Top" Width="100" Click="LoadModelButton_Click"/>
        <Button x:Name="CreateTrainValBins" Content="TokenizeNMakeBins" HorizontalAlignment="Left" Margin="471,10,0,0" VerticalAlignment="Top" Width="199" Click="TokenizeData_Click"/>
        <Button x:Name="sampleButton" Content="Sample from Train" Click="sampleButton_Click" Margin="675,7,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="115" />
    </Grid>
</Window>
