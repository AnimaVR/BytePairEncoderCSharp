<Window x:Class="BytePairEncoding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BytePairEncoding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="startButton" Content="Start Training" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Click="startButton_Click"/>
        <TextBlock x:Name="vocabSizeTextBlock" HorizontalAlignment="Left" Margin="10,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="mergePairsTextBlock" HorizontalAlignment="Left" Margin="10,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="tokensAndIdsTextBlock" HorizontalAlignment="Left" Margin="10,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="pairCountsTextBlock" HorizontalAlignment="Left" Margin="10,200,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button x:Name="decodeButton" Content="Decode" HorizontalAlignment="Center" Margin="0,257,0,0" VerticalAlignment="Top" Width="100" Click="decodeButton_Click"/>
        <TextBlock x:Name="decodedTextBlock" HorizontalAlignment="Left" Margin="10,0,0,30" TextWrapping="Wrap" Text="" Width="491" Height="38" VerticalAlignment="Bottom"/>
        <TextBox x:Name="inputTextBox" Margin="0,222,46,0" TextWrapping="Wrap" Text="" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Width="300"/>
        <Button x:Name="encodeButton" Content="Encode" HorizontalAlignment="Center" Margin="0,227,0,0" VerticalAlignment="Top" Width="100" Click="encodeButton_Click"/>
        <TextBlock x:Name="encodedTextBlock" HorizontalAlignment="Left" Margin="10,0,0,73" TextWrapping="Wrap" Text="" Width="491" Height="31" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="trainBinTextBlock" Margin="0,45,46,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="172" HorizontalAlignment="Right" Width="404"/>
        <Button x:Name="LoadModelButton" Content="Load Model" HorizontalAlignment="Left" Margin="215,10,0,0" VerticalAlignment="Top" Width="100" Click="LoadModelButton_Click"/>

    </Grid>
</Window>
